{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EnforcedTLS",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "${s3_bucket_state_arn}",
        "${s3_bucket_state_arn}/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    },
    {
      "Sid": "RootAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::${account_id}:root"
      },
      "Action": "s3:*",
      "Resource": [
        "${s3_bucket_state_arn}",
        "${s3_bucket_state_arn}/*"
      ]
    }
  ]
}